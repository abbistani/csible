<?xml version="1.0" encoding="UTF-8"?>
<document name="acquisitions">
  <ns2:acquisitions_common xmlns:ns2="http://collectionspace.org/services/acquisition" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <acquisitionReferenceNumber><%= data[:acquisitionReferenceNumber] %></acquisitionReferenceNumber>
    <acquisitionMethod><%= data[:acquisitionMethod] %></acquisitionMethod>
<% if data[:acquisitionMethod] == "purchase" %>
    <objectPurchasePriceValue><%= data[:objectPurchasePriceValue] %></objectPurchasePriceValue>
<% end %>
<% unless data[:objectPurchasePriceValue].empty? or data[:objectPurchasePriceCurrency].empty? or data[:objectPurchasePriceCurrencyId].empty? %>
    <objectPurchasePriceCurrency>urn:cspace:<%= data[:domain] %>:vocabularies:name(currency):item:name(<%= data[:objectPurchasePriceCurrencyId] %>)'<%= data[:objectPurchasePriceCurrency] %>'</objectPurchasePriceCurrency>
<% end %>
    <acquisitionSources>
<% unless data[:acquisitionSource].empty? %>
      <acquisitionSource>urn:cspace:<%= data[:domain] %>:personauthorities:name(person):item:name(<%= data[:acquisitionSourceId] %>)'<%= data[:acquisitionSource] %>'</acquisitionSource>
<% end %>
    </acquisitionSources>
    <owners>
<% unless data[:owner].empty? %>
<% if data[:ownerType] =~ /^org/ %>
      <owner>urn:cspace:<%= data[:domain] %>:orgauthorities:name(organization):item:name(<%= data[:ownerId] %>)'<%= data[:owner] %>'</owner>
<% elsif data[:ownerType] =~ /^per/ %>
      <owner>urn:cspace:<%= data[:domain] %>:personauthorities:name(person):item:name(<%= data[:ownerId] %>)'<%= data[:owner] %>'</owner>
<% end %>
<% end %>
    </owners>
    <acquisitionDateGroupList>
      <acquisitionDateGroup>
        <dateEarliestSingleQualifier/>
        <dateDisplayDate><%= data[:dateDisplayDate] %></dateDisplayDate>
      </acquisitionDateGroup>
    </acquisitionDateGroupList>
  </ns2:acquisitions_common>
</document>
